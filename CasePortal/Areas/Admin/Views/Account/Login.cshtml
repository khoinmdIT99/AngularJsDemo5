
@{
    Layout = null;
}
@using CasePortal.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Login</title>
    <!-- Custom fonts for this template-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Content/lib/css/sb-admin-2.min.css" rel="stylesheet" />
</head>
<body class="bg-gradient-primary" ng-app="App">
    <div class="container" ng-controller="AccountController">
        <div ng-class="loading==true?'loader' :' '"></div>
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <form name="form" ng-submit="Login(user)">
                                        <div ng-show="!AccountValid" class="alert alert-danger">
                                            Email or Password incorrect.
                                        </div>
                                        <div class="form-group">
                                            <input type="email" name="email" ng-model="user.Email" autofocus ng-required="true" maxlength="50" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Email Address...">
                                            <code ng-show="form.email.$error.required && !form.email.$pristine" class="help-block">
                                                @String.Format(Constants.MessageRequired, "Email")
                                            </code>
                                            <code ng-show="form.email.$error.email && !form.email.$pristine" class="help-block">
                                                Email invalid!
                                            </code>
                                        </div>

                                        <div class="form-group">
                                            <input type="password" id="password" name="password" ng-model="user.Password" ng-required="true" ng-minlength="6" maxlength="50" class="form-control form-control-user" id="exampleInputPassword" placeholder="Password">
                                            <code ng-show="form.password.$error.required && !form.password.$pristine" class="help-block">
                                                @String.Format(Constants.MessageRequired, "Password")
                                            </code>

                                            <code ng-show="form.password.$error.minlength && !form.password.$pristine" class=" help-block">
                                                Password is too short.
                                            </code>
                                        </div>


                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">Remember Me</label>
                                            </div>
                                        </div>
                                        <button href="#" id="btnLogin" type="submit" ng-disabled="form.$invalid||dataLoading" class="btn btn-primary btn-user btn-block">
                                            Login
                                        </button>
                                        <img ng-if="dataLoading" style="margin:10px auto;display:block" src="data:image/gif;base64," />
                                        <hr>
                                        <a href="index.html" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Login with Google
                                        </a>
                                        <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                            <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                        </a>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/Admin/Account/Register">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
    <script src="//code.angularjs.org/1.4.0/angular-route.js"></script>
    <script src="//code.angularjs.org/1.4.0/angular-cookies.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/lib/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Content/lib/js/sb-admin-2.min.js"></script>
    @Scripts.Render("~/bundles/AccountAdmin/angularjs")
</body>
</html>
